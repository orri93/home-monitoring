         <when>
           <simple>${headers.CamelHttpMethod} == "GET"</simple>
             <setBody>
               <constant>SELECT * FROM post_data</constant>
             </setBody>
             <to uri="jdbc:postgres-ds"/>
         </when>
       </route -->

    </camelContext>



</beans>

